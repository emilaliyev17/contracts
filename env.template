# Contract Analyzer - Environment Configuration Template
# Copy this file to .env and update with your actual values
# NEVER commit .env to version control - it contains sensitive information

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL database settings
DATABASE_NAME=contract_analyzer_db
DATABASE_USER=contract_user
DATABASE_PASSWORD=your_secure_password_here
DATABASE_HOST=localhost
DATABASE_PORT=5432

# =============================================================================
# DJANGO CONFIGURATION
# =============================================================================
# Django secret key for cryptographic signing
# Generate a new one for production: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=jba!e1hu$hhh%vr@#^!c_a2#deo(vjm5fy_1fgr6-_g+9%+w!z

# Debug mode - set to False in production
DEBUG=True

# Allowed hosts for Django - add your domain in production
ALLOWED_HOSTS=localhost,127.0.0.1

# =============================================================================
# FILE UPLOAD SETTINGS
# =============================================================================
# Maximum file upload size in bytes (10MB = 10485760 bytes)
MAX_UPLOAD_SIZE=10485760

# =============================================================================
# OPENAI CONFIGURATION
# =============================================================================
# OpenAI API key for GPT-4o integration
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# OpenAI model to use for contract extraction
OPENAI_MODEL=gpt-4o

# =============================================================================
# SECURITY NOTES
# =============================================================================
# 1. Change DATABASE_PASSWORD to a strong, unique password
# 2. Generate a new SECRET_KEY for production
# 3. Set DEBUG=False in production
# 4. Update ALLOWED_HOSTS with your actual domain in production
# 5. Never commit .env file to version control
# 6. Keep .env file secure and limit access to authorized personnel only
